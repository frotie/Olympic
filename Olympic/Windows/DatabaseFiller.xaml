<Window x:Class="Olympic.Windows.DatabaseFiller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olympic.Windows"
        mc:Ignorable="d"
        Title="DatabaseFiller"
        Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="mainDb" AutoGenerateColumns="False"
                  CanUserAddRows="True" CanUserDeleteRows="True">
            
        </DataGrid>

        <Button Grid.Row="1" Content="Сохранить" Margin="10"
                HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>
